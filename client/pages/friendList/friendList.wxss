.book{
  display: flex;
  direction: row;
  border-bottom: 1px #27a096 solid;
  margin-top: 20rpx;
}
.book_cover{

    margin:20rpx; 
    width:180rpx;
    height: 200rpx;
    background-color: #f6fffe; 
}
.book_right{
  margin-top: 50rpx;
  margin-left: 20rpx;
}
.book_author{
  margin-top: 40rpx;
  font-size: 30rpx;
}
.item{
  display: flex;
  flex-direction: row;
  margin: 10rxp 30rpx 10rpx 30rpx;
